    $output .= "\n";
    $output .= $address['commerce_customer_address_thoroughfare'];
    $output .= "\n";
    $output .= $address['commerce_customer_address_locality'];
    $output .= " ";
    $output .= $address['commerce_customer_address_administrative_area'];
    $output .= " ";
    $output .= $address['commerce_customer_address_postal_code'];
