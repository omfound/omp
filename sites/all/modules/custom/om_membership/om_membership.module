function om_membership_user_role_edit_access($role) {
  // Prevent the system-defined roles from being altered or removed.
  if ($role->rid == DRUPAL_ANONYMOUS_RID || $role->rid == DRUPAL_AUTHENTICATED_RID) {
    return FALSE;
  }

  if (strpos(strtolower($role->name), 'membership')) {
    if (user_access('administer permissions') || user_access('administer om membership')) {
      return true;
    }
  }

  return user_access('administer permissions');
}

